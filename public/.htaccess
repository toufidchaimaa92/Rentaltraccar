<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    # ---------------------------------------
    # 游 PERFORMANCE: CACHING FOR LIGHTHOUSE
    # ---------------------------------------
    <IfModule mod_expires.c>
        ExpiresActive On

        # 游릴 Cache fingerprinted (hashed) Vite assets for 1 year
        # Example: app-Cg_RJvAc.js, index-Cs9StAu3.css...
        ExpiresByType text/css "access plus 1 year"
        ExpiresByType application/javascript "access plus 1 year"
        ExpiresByType text/javascript "access plus 1 year"

        # 游릴 Cache images for 1 year (safe because filenames like dashboard-768.webp never change)
        ExpiresByType image/webp "access plus 1 year"
        ExpiresByType image/jpeg "access plus 1 year"
        ExpiresByType image/png "access plus 1 year"
        ExpiresByType image/svg+xml "access plus 1 year"
        ExpiresByType image/gif "access plus 1 year"

        # 游릳 Cache fonts for 1 year (Google/Bunny fonts local or remote)
        ExpiresByType font/woff2 "access plus 1 year"
        ExpiresByType font/woff "access plus 1 year"
        ExpiresByType font/ttf "access plus 1 year"
    </IfModule>

    <IfModule mod_headers.c>
        # 游릴 Strong immutable caching for Vite build assets
        <FilesMatch "\.(js|css|woff2|woff)$">
            Header set Cache-Control "public, max-age=31536000, immutable"
        </FilesMatch>

        # 游릴 Cache images for 1 year (safe with hashed filenames)
        <FilesMatch "\.(png|jpg|jpeg|gif|webp|svg)$">
            Header set Cache-Control "public, max-age=31536000, immutable"
        </FilesMatch>

        # 游릳 Fallback for non-hashed image filenames (older assets)
        <FilesMatch "^((?!-[A-Za-z0-9]{8,}).)*\.(png|jpg|jpeg|webp)$">
            Header set Cache-Control "public, max-age=604800"
        </FilesMatch>
    </IfModule>

    # ---------------------------------------
    # 游대 LARAVEL ROUTING
    # ---------------------------------------
    RewriteEngine On

    # Pass Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Pass X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Remove Trailing Slashes
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Redirect To index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
